<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wendy.yenko.RateReview">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="161dp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/logolarge" />

</LinearLayout>


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Help Us\nHelp You"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Review:"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/journey_review"
        android:layout_width="249dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textImeMultiLine"
        />

    <RatingBar
        android:id="@+id/journey_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/journey_review"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:stepSize="1"/>

    <Button
        android:id="@+id/btn_rate_review"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:text="SUBMIT"
        android:background="@drawable/button_shape"
        android:textColor="#0da530"/>

</LinearLayout>
